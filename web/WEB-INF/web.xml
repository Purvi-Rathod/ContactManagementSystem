<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>ViewContactsServlet</servlet-name>
        <servlet-class>controller.ViewContactsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddContactServle</servlet-name>
        <servlet-class>controller.AddContactServle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditContactServlet</servlet-name>
        <servlet-class>controller.EditContactServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewContactsServlet</servlet-name>
        <url-pattern>/ViewContactsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddContactServle</servlet-name>
        <url-pattern>/AddContactServle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditContactServlet</servlet-name>
        <url-pattern>/EditContactServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
